{
    "name": "spex",
    "preprocessing": {
        "sr": 16000
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "Spex",
        "args": {
            "N": 64,
            "B": 2,
            "O": 64,
            "P": 128,
            "spk_embed_dim": 64
        }
    },
    "data": {
        "train": {
            "batch_size": 1,
            "num_workers": 0,
            "datasets": [
                {
                    "type": "LibrispeechMixDataset",
                    "args": {
                        "data_dir": "data/datasets/librispeech/dev-clean",
                        "max_audio_length": 3.0,
                        "limit": 10
                    }
                }
            ]
        },
        "val": {
            "batch_size": 1,
            "num_workers": 0,
            "datasets": [
                {
                    "type": "LibrispeechMixDataset",
                    "args": {
                        "data_dir": "data/datasets/librispeech/dev-clean",
                        "max_audio_length": 3.0,
                        "limit": 10
                    }
                }
            ]
        }
    },
    "loss": {
        "type": "SpexLoss",
        "args": {
            "alpha": 0.1,
            "beta": 0.1,
            "gamma": 0.5
        }
    },
    "metrics": {
        "all": [
            {
                "type": "SI_SDR_Metric",
                "args": {
                    "name": "SI_SDR"
                }
            },
            {
                "type": "PESQ_Metric",
                "args": {
                    "name": "PESQ"
                }
            }
        ],
        "evaluation_metrics": [],
        "train_metrics": []
    },
    "trainer_args": {
        "output_dir": "saved/test",
        "per_device_train_batch_size": 1,
        "per_device_eval_batch_size": 1,
        "max_steps": 5000,
        "learning_rate": 1e-3,
        "evaluation_strategy": "steps",
        "eval_steps": 100,
        "include_inputs_for_metrics": false,
        "label_names": ["target_wav"],
        "report_to": ["wandb"],
        "remove_unused_columns": false
    },
    "trainer":{
        "save_dir": "saved/"
    }
}