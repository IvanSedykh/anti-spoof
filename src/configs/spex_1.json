{
    "name": "spex",
    "preprocessing": {
        "sr": 16000
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "Spex",
        "args": {
            "L1": 40,
            "L2": 160,
            "L3": 320,
            "N": 256,
            "B": 6,
            "O": 256,
            "P": 512,
            "spk_embed_dim": 256
        }
    },
    "data": {
        "train": {
            "datasets": [
                {
                    "type": "LibrispeechMixDataset",
                    "args": {
                        "data_dir": "data/datasets/librispeech/train-clean-100",
                        "max_audio_length": 3.0,
                        "limit": 30000
                    }
                }
            ]
        },
        "val": {
            "datasets": [
                {
                    "type": "LibrispeechMixDataset",
                    "args": {
                        "data_dir": "data/datasets/librispeech/dev-clean",
                        "max_audio_length": 3.0,
                        "limit": 1000
                    }
                }
            ]
        }
    },
    "loss": {
        "type": "SpexLoss",
        "args": {
            "alpha": 0.1,
            "beta": 0.1,
            "gamma": 0.5
        }
    },
    "metrics": {
        "all": [
            {
                "type": "SI_SDR_Metric",
                "args": {
                    "name": "SI_SDR"
                }
            },
            {
                "type": "PESQ_Metric",
                "args": {
                    "name": "PESQ"
                }
            }
        ],
        "evaluation_metrics": [],
        "train_metrics": []
    },
    "trainer_args": {
        "per_device_train_batch_size": 16,
        "per_device_eval_batch_size": 16,
        "gradient_accumulation_steps": 2,
        "max_steps": 200000,
        "learning_rate": 0.001,
        "max_grad_norm": 2.0,
        "warmup_steps": 500,
        "evaluation_strategy": "steps",
        "eval_steps": 500,
        "logging_steps": 100,
        "save_steps": 1000,
        "save_strategy": "steps",
        "save_total_limit": 5,
        "include_inputs_for_metrics": false,
        "label_names": [
            "target_wav"
        ],
        "report_to": [
            "wandb"
        ],
        "remove_unused_columns": false
    },
    "trainer": {
        "save_dir": "saved/"
    }
}